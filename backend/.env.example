# MongoDB connection string
MONGO_URL=mongodb://localhost:27017
DB_NAME=sentient_tracker

# OpenAI API key for analysis
OPENAI_API_KEY=

# Legacy JWT secret for signing tokens (used when legacy auth is enabled)
JWT_SECRET=change-me

# Auth0 configuration (set for production auth)
AUTH0_DOMAIN=
AUTH0_AUDIENCE=
AUTH0_CLIENT_ID=

# Auth0 database connection for password reset emails
AUTH0_DB_CONNECTION=Username-Password-Authentication

# Optional: Auth0 Management API credentials (required only for automatic Auth0 identity deletion)
AUTH0_MGMT_CLIENT_ID=
AUTH0_MGMT_CLIENT_SECRET=
AUTH0_MGMT_AUDIENCE=

# Auth mode hardening
# If unset, legacy auth is auto-disabled on Railway/Auth0-configured environments.
ALLOW_LEGACY_AUTH=

# Basic in-memory auth rate limiting
AUTH_RATE_WINDOW_SECONDS=600
AUTH_LOGIN_RATE_LIMIT=60
AUTH_SIGNUP_RATE_LIMIT=30
AUTH_PASSWORD_RESET_RATE_LIMIT=20

# Basic in-memory scan rate limiting
SCAN_RATE_WINDOW_SECONDS=300
SCAN_RATE_LIMIT=20

# CORS origins comma separated
CORS_ORIGINS=http://localhost:3000

# Account deletion switch (disabled by default)
ACCOUNT_DELETE_ENABLED=false
